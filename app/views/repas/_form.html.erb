<% if current_user %>
    <h1>Hello <%= current_user.first_name %> </h1>
    <h1>Créer</h1>
    <%= simple_form_for(@repa, data: {turbo: false}) do |f| %>
      <%= f.input :items, label: "Quelle nourriture ?" %>
      <%= f.input :drinks, label: "Quelle boisson ?"%>
      <%= f.input :allergies, label: "Allergies ? Régime ?"%>
      <%= f.input :quantities, label: "Quantités ?"%>
      <%= f.button :submit%>
    <% end %>
    <% else %>

    <h1>Merci de vous connecter</h1>
    <%= link_to "Sign in", new_user_session_path, class: "btn btn-signup-forgotpassword py-2"%>
    <%= link_to "Become a member", new_user_registration_path, class: "btn btn-signup-forgotpassword py-2"%>
  <% end %>
